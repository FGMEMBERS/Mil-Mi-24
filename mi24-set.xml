<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="System/views.xml">

    <description>Mil Mi 24 Hind (Yasim)</description>
    <author>BARANGER Emmanuel (3D/FDM)/ Zel (FDM), Raptor (Guns system)</author>
    <status>alpha</status>
    <license>GPL v2</license>

    <flight-model>yasim</flight-model>
    <aero>mi24</aero>

    <fuel-fraction>0.8</fuel-fraction>

    <rating>
      <FDM type="int">     2 </FDM>
      <systems type="int"> 1 </systems>
      <cockpit type="int"> 1 </cockpit>
      <model type="int">   4 </model>
    </rating>

    <startup>
      <splash-texture>Aircraft/Mil-Mi-24/mi24-splash.png</splash-texture>
    </startup> 

    <sound>
      <path>Aircraft/Mil-Mi-24/Sounds/mi24-sound.xml</path>
    </sound>

    <instrumentation>
      <path>Aircraft/Mil-Mi-24/System/instrumentation.xml</path>
    </instrumentation>

    <model>
      <path archive="y">Aircraft/Mil-Mi-24/Models/mi24.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
      <mi24>
        <state type="int">0</state>
        <engine type="float">0</engine>
        <rotor-step-deg type="float">-1</rotor-step-deg>
      </mi24>
    </model>

    <!-- ##################### -->
    <submodels>
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Mil-Mi-24/Models/Effects/guns/submodels.xml</path>
    </submodels>
    <!-- ##################### -->

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int n="0"    type="int">  0 </int>                                         <!-- 0 immat -->
        <int n="1"    type="int">  0 </int>                                         <!-- 1 immat -->
        <int n="2"    type="int">  0 </int>                                         <!-- 2 immat -->
        <int n="3"    type="int">  0 </int>                                         <!-- 3 immat -->
        <int n="4"    type="int">  0 </int>                                         <!-- 4 immat -->
        <int n="5"    type="int">  0 </int>                                         <!-- 5 immat -->
        <int n="6"    type="bool" alias="controls/smoke"> 0 </int>                  <!-- 6 smoke/bomb/torpedo -->
        <int n="7"    type="int">  0 </int>                                         <!-- 7 color -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                     <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/rotors/main/rpm"/>
        <float n="5"  alias="/engines/engine[0]/cranking"/>
        <float n="6"  alias="/gear/gear[0]/wow/"/>
        <float n="7"  alias="/gear/gear[1]/wow/"/>
        <float n="8"  alias="/gear/gear[2]/wow/"/>
        <float n="9"  alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <float n="12" alias="/orientation/pitch-deg"/>
        <float n="13" alias="/orientation/roll-deg"/>
        <float n="14" alias="/rotors/main/blade[0]/position-deg"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <weight n="0">
      <name>Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="1">
      <name>Co-Pilot</name>
      <weight-lb>180</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="2">
      <name>Right Passenger</name>
      <weight-lb>0</weight-lb>
      <max-lb>300</max-lb>
    </weight>

    <weight n="3">
      <name>Load</name>
      <weight-lb>0</weight-lb>
      <max-lb>20000</max-lb>
    </weight>
    
    <help include="System/help.xml"/>

    <menubar include="Dialogs/mi24-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking>1</brake-parking>
    </gear>
    <rotor>
      <reltarget>1</reltarget>
      <maxreltorque>1</maxreltorque>
    </rotor>
    <!-- ################ -->
    <armament>
      <trigger>  0 </trigger>
      <trigger1> 0 </trigger1>
      <trigger2> 0 </trigger2>
    </armament>
    <!-- ################ -->
  </controls>

  <instrumentation>
    <gsdi>
      <serviceable type="bool">true</serviceable>
      <enabled type="bool">true</enabled>
    </gsdi>
  </instrumentation>

  <input>
    <keyboard include="System/mi24-keyboard.xml"/>
  </input>

  <rotors>
    <main>
      <rpm type="double">0</rpm>
      <cone-deg type="double">0</cone-deg>
      <cone1-deg type="double">0</cone1-deg>
      <cone2-deg type="double">0</cone2-deg>
      <cone3-deg type="double">0</cone3-deg>
      <cone4-deg type="double">0</cone4-deg>
    </main>
  </rotors>

  <nasal>
    <doors>
      <file>Aircraft/Mil-Mi-24/Nasal/doors.nas</file>
    </doors>
    <mi24>
      <file>Aircraft/Mil-Mi-24/Nasal/immat.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/light.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/mi24.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/liveries.nas</file>
      <file>Aircraft/Mil-Mi-24/Nasal/bladevisible.nas</file>
    </mi24>
    <!-- ########### -->
    <guns>
      <file>Aircraft/Mil-Mi-24/Nasal/weapons.nas</file>
    </guns>
    <!-- ########### -->
  </nasal>

</PropertyList>
